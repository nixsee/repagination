{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "2020.5.27",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/Mathnerd314/repagination/",

  "default_locale": "en",
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "icons": {  "32": "icon32.png",
              "48": "icon.png",
              "64": "icon64.png"},

  "applications": {
    "gecko": {
      "id": "repagination-fork-mathnerd314@github.com",
      "strict_min_version": "63.0"
    }
  },


  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["clicked_element.js"]
    }
  ],

  "background": {
    "scripts": ["browser-polyfill.js","main.js"]
  },

  "permissions": [
    "activeTab",
    "storage",
    "menus",
    "contextMenus",
    "<all_urls>"
  ]
}
